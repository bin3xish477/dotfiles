{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
          "cache": {
            "directory": "/tmp/ccls"
          }
        }
    }
  },
  "sql.database": "postgresql",
  "sql.lintOnSave": true,
  "java.home": "/usr/lib/jvm/java-17-openjdk-amd64"
}

